{
  "name": "smices/pha-service",
  "license": "MIT",
  "keywords": [
    "swoole",
    "phalcon",
    "websocket",
    "beanstalk",
    "redis",
    "multi process",
    "task worker",
    "message queue"
  ],
  "version": "1.0.0",
  "authors": [
    {
      "name": "jacky",
      "email": "jacky.ju@qq.com"
    }
  ],
  "description": "Phalcon + Swoole 无侵入解决方案",
  "homepage": "https://github.com/smices/PhaService",
  "require": {
    "php": ">=7.1",
    "phalcon/incubator": "^3.4"
  },
  "require-dev": {
    "kint-php/kint": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "app\\": "app",
      "cli\\": "cli",
      "sys\\": "sys"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "vendor-dir": "vendor",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"mkdir('var/log');\"",
      "php -r \"mkdir('var/cache');\"",
      "php -r \"mkdir('var/tmp');\"",
      "php -r \"mkdir('var/pid');\""
    ]
  }
}
